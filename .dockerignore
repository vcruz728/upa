# ======================================
# Archivos y carpetas que NO necesitamos
# en la imagen final de Docker
# ======================================

# Dependencias locales (se instalan dentro del contenedor)
node_modules
vendor

# Archivos de logs y cachés de Laravel
storage/logs
storage/framework/cache
storage/framework/sessions
storage/framework/views
storage/debugbar

# Configuración del sistema de colas
horizon.log

# Archivos de build locales
/public/hot
/public/storage
/public/build

# Archivos de control de versiones
.git
.gitignore
.gitattributes

# Archivos de dependencias que ya manejamos en la imagen
npm-debug.log
yarn-error.log
pnpm-debug.log

# Archivos del editor/IDE
*.swp
*.swo
*.idea
.vscode
.DS_Store

# Archivos de entorno (los valores van como variables en Dokploy)
.env
.env.local
.env.*.local

# ======================================
# Notas:
# - vendor/ y node_modules/ se reconstruyen dentro del contenedor.
# - storage/ solo se persiste vía volumen en Dokploy (ej: /var/www/html/storage).
# - .env lo definimos con variables de entorno en Dokploy.
# ======================================
