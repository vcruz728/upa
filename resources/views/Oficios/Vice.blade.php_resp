            // No-breaks en preposiciones
            function nb_pairs($t) {
            $t = preg_replace('/\bde\s+la\b/iu', 'de&nbsp;la', $t);
            $t = preg_replace('/\bde\s+los\b/iu', 'de&nbsp;los', $t);
            $t = preg_replace('/\bde\s+las\b/iu', 'de&nbsp;las', $t);
            $t = preg_replace('/\bdel\b/iu', 'del', $t);
            return $t;
            }

            $nombre = trim($respuesta->nombre ?? '');
            $cargo = trim($respuesta->cargo ?? '');
            $dependencia = trim($respuesta->dependencia ?? '');
            $BUAP = 'Benemérita Universidad Autónoma de Puebla';

            // Quita cualquier conector FINAL del cargo (…, "de la", "del", "de los", "de las", "de el", "de")
            function cargo_base($c) {
            $t = trim((string)$c);
            $t = preg_replace('/\s*(?:del|de\s+la|de\s+los|de\s+las|de\s+el|de)\s*$/iu', '', $t);
            return trim($t);
            }

            // Preposición a usar ANTES del núcleo de la dependencia
            function leading_prep_for($txt) {
            $t = mb_strtolower(trim((string)$txt), 'UTF-8');
            if (preg_match('/^(del|de\s+la|de\s+los|de\s+las|de\s+el)\b/u', $t, $m)) {
            return $m[1] === 'de el' ? 'del' : $m[1];
            }
            if (preg_match('/^(el)\b/u', $t)) return 'del';
            if (preg_match('/^(la)\b/u', $t)) return 'de la';
            if (preg_match('/^(los)\b/u', $t)) return 'de los';
            if (preg_match('/^(las)\b/u', $t)) return 'de las';
            return 'de la';
            }

            // Núcleo de la dependencia sin preposición/artículo iniciales
            function dep_nucleo($txt) {
            $t = trim((string)$txt);
            $t = preg_replace('/^(?:del|de\s+la|de\s+los|de\s+las|de\s+el|de)\s+/iu', '', $t);
            $t = preg_replace('/^(?:el|la|los|las)\s+/iu', '', $t);
            return trim($t);
            }

            // Cargos cortos (van en UNA sola línea con la dependencia)
            function es_cargo_corto($c) {
            $b = mb_strtolower(cargo_base($c), 'UTF-8');
            return preg_match('/^director(a)?$/u', $b) === 1;
            // añade más si quieres: |abogado(a)?\s+general|jefe(a)?|coordinador(a)?
            }

            $cargoBase = cargo_base($cargo);
